<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal">

        <ImageView
            android:id="@+id/circleImgDVLV"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/circle"

            android:layout_margin="5dp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
           >

            <TextView
                android:id="@+id/sessionTimeTVDVLV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Lesson 01 : 08:30 AM - 09.30 AM"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/subjectNameTVDVLV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Java Programming"
                android:textColor="@color/black"

                android:textSize="18sp" />

            <TextView
                android:id="@+id/roomNoTVDVLV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="A-Block 901"
                android:textColor="@color/black"
                android:textSize="16sp" />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>